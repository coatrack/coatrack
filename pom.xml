    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>
    
    <inceptionYear>2013</inceptionYear>
    
    <organization>
        <name>Corizon | Institut für angewandte Systemtechnik Bremen GmbH (ATB)</name>
        <url>https://corizon.nl | https://www.atb-bremen.de/</url>
    </organization>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.3.1</version>
            </plugin>
        </plugins>
    </reporting>    

    <scm>
        <connection>scm:git:git://github.com/coatrack/coatrack.git</connection>
        <developerConnection>scm:git:ssh://github.com:coatrack/coatrack.git</developerConnection>
        <url>http://github.com/coatrack/coatrack/tree/master</url>
    </scm>

    <developers>
        <developer>
            <name>Francisco Perez</name>
            <email>paco@corizon.nl</email>
            <organization>Corizon</organization>
            <organizationUrl>https://www.corizon.nl</organizationUrl>
        </developer>
    </developers>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>


</project>
